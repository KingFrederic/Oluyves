  <!-- Instagram embed loader -->
  <script async src="//www.instagram.com/embed.js"></script>

  <script>
    // Year
    document.getElementById('y').textContent = new Date().getFullYear();

    // Mode toggle
    const body = document.body;
    const modelBtn = document.getElementById('mode-model');
    const bizBtn = document.getElementById('mode-biz');

    function setMode(business){
      if(business){
        body.classList.add('business');
        modelBtn.classList.remove('active'); modelBtn.setAttribute('aria-selected','false');
        bizBtn.classList.add('active'); bizBtn.setAttribute('aria-selected','true');
      } else {
        body.classList.remove('business');
        bizBtn.classList.remove('active'); bizBtn.setAttribute('aria-selected','false');
        modelBtn.classList.add('active'); modelBtn.setAttribute('aria-selected','true');
      }
      // Reprocess Instagram embeds after toggle (safe no-op if already processed)
      if(window.instgrm && window.instgrm.Embeds) window.instgrm.Embeds.process();
    }
    modelBtn.addEventListener('click',()=>setMode(false));
    bizBtn.addEventListener('click',()=>setMode(true));

    // Sliders
    function nudge(trackId, dir=1){
      const el = document.getElementById(trackId);
      const w = el.getBoundingClientRect().width * 0.9;
      el.scrollBy({left: w * dir, behavior:'smooth'});
    }
    document.querySelectorAll('.navbtn').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const id = btn.getAttribute('data-track');
        nudge(id, btn.classList.contains('next') ? 1 : -1);
      });
    });

    // If Instagram script loads after initial paint, ensure processing
    window.addEventListener('load', ()=>{
      if(window.instgrm && window.instgrm.Embeds) window.instgrm.Embeds.process();
    });
  </script>
